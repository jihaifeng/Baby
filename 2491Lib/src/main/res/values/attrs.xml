<?xml version="1.0" encoding="utf-8"?>
<resources>
  <attr format="color" name="clockBackground"/>
  <attr format="color" name="clockTextColor"/>

  <!-- RippleView -->
  <declare-styleable name="RippleView">
    <attr format="integer" name="rv_alpha"/>
    <attr format="integer" name="rv_framerate"/>
    <attr format="integer" name="rv_rippleDuration"/>
    <attr format="integer" name="rv_zoomDuration"/>
    <attr format="color" name="rv_color"/>
    <attr format="boolean" name="rv_centered"/>
    <attr format="enum" name="rv_type">
      <enum name="simpleRipple" value="0"/>
      <enum name="doubleRipple" value="1"/>
      <enum name="rectangle" value="2"/>
    </attr>
    <attr format="dimension" name="rv_ripplePadding"/>
    <attr format="boolean" name="rv_zoom"/>
    <attr format="float" name="rv_zoomScale"/>
    <attr format="boolean" name="rv_listMode"/>
  </declare-styleable>

  <!--EmptyLayout-->
  <declare-styleable name="EmptyLayout">
    <attr format="color" name="background_color"/>
  </declare-styleable>
</resources>